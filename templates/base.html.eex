<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title><%= @page.title %> - <%= @site.name %></title>
    <link rel="stylesheet" href="<%= asset "css/style.css" %>">
    <link rel="stylesheet" href="<%= asset "css/prism.css" %>">
  </head>
  <body>
    <div id="wrapper">
      <header id="top">
        <h1><a href="<%= base() %>"><%= @site.name %></a></h1>
        <p><%= @site.description %></p>
      </header>
      <nav><%= include "nav" %></nav>
      <hr>
      <main><%= @contents %></main>
      <hr>
      <footer>
        <% {{year, _, _}, _} = :calendar.local_time() %>
        <p>Copyright &copy; <%= year %> <%= @site.author %> <a href="https://dalgona.github.io/">[Website]</a> <a href="https://github.com/Dalgona">[GitHub]</a></p>
        <p>This website was generated by <a href="https://github.com/Dalgona/Serum">Serum</a>.
      </footer>
    </div>
    <script src="<%= asset "js/prism.js" %>"></script>
  </body>
</html>
