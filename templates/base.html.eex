<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @site_name %> - <%= @page_title %></title>
    <link rel="stylesheet" href="<%= @base_url %>assets/css/style.css">
  </head>
  <body>
    <div id="wrapper">
      <header id="top">
        <h1><a href="<%= @base_url %>"><%= @site_name %></a></h1>
        <p><%= @site_description %></p>
      </header>
      <nav><%= @navigation %></nav>
      <hr>
      <main><%= @contents %></main>
      <hr>
      <footer>
        <p>Copyright &copy; 2016 <%= @author %></p>
        <p>This website was generated by <a href="https://github.com/Dalgona/Serum">Serum</a>.
      </footer>
    </div>
  </body>
</html>
