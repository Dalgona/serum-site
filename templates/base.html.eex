<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @page_title %> - <%= @site_name %></title>
    <link rel="stylesheet" href="<%= @base_url %>assets/css/style.css">
    <link rel="stylesheet" href="<%= @base_url %>assets/css/prism.css">
  </head>
  <body>
    <div id="wrapper">
      <header id="top">
        <h1><a href="<%= @base_url %>"><%= @site_name %></a></h1>
        <p><%= @site_description %></p>
      </header>
      <nav><%= @navigation %></nav>
      <hr>
      <main><%= @contents %></main>
      <hr>
      <footer>
        <p>Copyright &copy; 2016 <%= @author %> <a href="https://dalgona.github.io/">[Website]</a> <a href="https://github.com/Dalgona">[GitHub]</a></p>
        <p>This website was generated by <a href="https://github.com/Dalgona/Serum">Serum</a>.
      </footer>
    </div>
    <script src="<%= @base_url %>assets/js/prism.js"></script>
  </body>
</html>
