<article class="post">
  <header>
    <h1><%= @page.title %></h1>
    <p>
      <%= @page.date %>
      <%= unless Enum.empty? @page.tags do %>
        <span class="tags">
          Tags:
          <%= for t <- @page.tags do %>
            <a class="tag" href="<%= t.list_url %>"><%= t.name %></a>
          <% end %>
        </span>
      <% end %>
    </p>
  </header>
  <div>
    <%= @contents %>
  </div>
</article>
